<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_video_right"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
          android:layout_margin="5dp"
         android:gravity="center"
        android:drawableLeft="@drawable/shape_line"
        android:drawableRight="@drawable/shape_line"
        android:id="@+id/header_video_right"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="3dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/message_layout_video_right">


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_bubble_right"
        android:layout_height="wrap_content">


            <com.nsromapa.frenzapp.saytalk.views.RoundCornerLayout
                    android:layout_width="240dp"
                    app:cornerRadius="35dp"
                    app:topLeftEnabled="true"
                    app:topRightEnabled="true"
                    app:bottomLeftEnabled="true"
                    app:bottomRightEnabled="false"
                    android:id="@+id/video_container_right_card"
                    android:layout_height="210dp"
                    android:background="@drawable/shape_bubble_right"
                    android:orientation="vertical">

                    <FrameLayout
              android:layout_width="match_parent"
              android:id="@+id/videoFrameLayoutRight"
              android:background="@color/black"
              android:layout_height="match_parent">

                 <ImageView android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/thumbnail_right"
                            android:alpha="0.5"
                            android:scaleType="centerCrop"
                 />

                     <ImageView
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:clickable="true"
                     android:scaleType="centerInside"
                     android:layout_gravity="center"
                     android:src="@drawable/ic_clear_white_24dp"
                     android:id="@+id/imageview_video_right"
                     />

                 <com.mikhaellopez.circularprogressbar.CircularProgressBar
                         android:layout_width="60dp"
                       android:layout_gravity="center"
                       android:progressDrawable="@drawable/progress_drawable"
                       android:id="@+id/progress_bar_video_right"
                         app:cpb_background_progressbar_color="@color/black"
                         app:cpb_background_progressbar_width="5dp"
                         app:cpb_progressbar_color="@color/colorAccent"
                         app:cpb_progressbar_width="5dp"
                         app:cpb_progress="0"
                       android:indeterminate="false"
                       android:layout_height="60dp"/>

          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_file_upload_white_24dp"
                    android:id="@+id/tap_retry_video_right"
                    android:text="Tap to Retry"
                    android:background="@drawable/blurred_text_background"
                    android:padding="15dp"
                    android:alpha="0.8"
          />


                 <TextView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:textColor="@color/white"
                           android:drawableLeft="@drawable/ic_file_download_white_24dp"
                           android:id="@+id/tap_retry_download_video_right"
                           android:text="Tap to Retry"
                           android:background="@drawable/blurred_text_background"
                           android:padding="15dp"
                           android:alpha="0.8"
                 />




                 <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:orientation="horizontal"
                             android:gravity="center"
                             android:layout_gravity="bottom"
                             android:paddingLeft="15dp"

               >
                 <ImageView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_video_white_24dp"
                 />

                 <TextView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:textColor="@color/white"
                           android:id="@+id/video_length_right"
                           android:textSize="10sp"
                             android:padding="10dp"
                 />
               </LinearLayout>

                        <View android:layout_width="match_parent"
                              android:layout_gravity="bottom"
                              android:layout_height="match_parent"
                              android:background="@drawable/image_background"
                        />

               <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:gravity="end"
                                      android:padding="5dp"
                                      android:orientation="horizontal"
                                      android:layout_gravity="end|bottom">

                   <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_gravity="end"
                           android:text="12:10 PM"
                           android:textSize="10sp"
                           android:textAllCaps="true"
                           android:layout_marginRight="4dp"
                           android:id="@+id/time_video_right"
                           android:textColor="@color/transparent_white_17"
                   />


                            <ImageView android:layout_width="12dp"
                                       android:id="@+id/delivery_video_status"
                                       android:layout_gravity="center"
                                       android:src="@drawable/ic_message_pending_gray_24dp"
                                       android:layout_height="12dp"/>


                        </LinearLayout>



                    </FrameLayout>

            </com.nsromapa.frenzapp.saytalk.views.RoundCornerLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:maxWidth="230dp"
                android:autoLink="all"
                android:id="@+id/messageText_video_right"
            android:textColor="@color/white"
            />


    </LinearLayout>




    </LinearLayout>



</LinearLayout>